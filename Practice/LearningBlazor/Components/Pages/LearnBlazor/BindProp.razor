@page "/learnBlazor/bindprop"

<h3>Product - <Data> Binding</Data></h3>

Name : @product.Name <br />
IsActive : @(product.IsActive ? "Active" : "Inactive") <br />
Price : @product.Price
<br />
<br />
<br />


IsActive : <input type="checkbox" @bind="@product.IsActive" /> <br />
Price : <input type="number" @bind="@product.Price" @bind:event="oninput" />
<br />

 

@code {
    Models.Product product = new()
    {
        Id = 1,
        Name = "Product1",
        IsActive = false,
        Price = 9
    };
}