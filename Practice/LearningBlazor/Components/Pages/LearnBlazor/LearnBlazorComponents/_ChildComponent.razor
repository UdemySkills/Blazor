<div>
    <div class="alert alert-info">
        @Title
    </div>
    @if (ChildSomeContent != null)
    {
        <div class="alert alert-info">
            @ChildSomeContent

        </div>
    }
    @if (ChildContent != null)
    {
        <div class="alert alert-info">
            @ChildContent
        </div>
    }
    <button class="btn btn-danger" @onclick="ClickEvent">Click Me to get dynamic content rendered</button>

    <_GrandChildComponent MessageForGrandChild="This message is passed from the CHILD COMPONENT"></_GrandChildComponent>
</div>
@code {
    [Parameter]
    public string Title { get; set; } = "";

    [Parameter]
    public RenderFragment ChildSomeContent { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public EventCallback ClickEvent { get; set; }
}
